#include <iostream>
using namespace std;

int main() {
	int sum = 0;
	int num;
	int count = 0;
	cout << "Enter the Number" << endl;
	cin >> num;

	while (num != 0) {
		sum += num;
		cout << "Enter the Number" << endl;
		cin >> num;
		count++;
	}
	cout << "The Count: " << count << endl;
	cout << "The Sum: " << sum << endl;

	return 0;
}
