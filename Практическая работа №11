#include <iostream>
using namespace std;

int main() {
	int shape;
	int type;
	int len;
	char text;
	cout << "Programm - Geometric Shapes" << endl;
	cout << "Choose the Shape or Exit" << endl;
	cout << "[1] Line" << endl;
	cin >> shape;
	system("CLS");
	cout << "Shape: Line" << endl;
	cout << "[1] Horizontal, [2] Vertical" << endl;
	cin >> type;
	system("CLS");
	cout << "Enter the Length of the Line: " << endl;
	cin >> len;
	cout << "Enter the Texture of the Line: " << endl;
	cin >> text;

	int i = 0;
	if (type == 1) {
		while (i < len) {
			cout << text;
			if (i < len - 1) {
				cout << " ";
			}
			i++;
		}
		cout << "\n";
	}
	else {
		while (i < len) {
			cout << text << "\n";
			i++;
		}
	}
}
